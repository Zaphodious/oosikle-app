import { BrutalBrushes } from "brutalcolors.slint";
export component BrutalPanel {
    in property <brush> background: BrutalBrushes.AppColorsBackground.secondary;
    outerrect := Rectangle {
        innerrect := Rectangle {
            background: background;
            border-radius: 16px;
            border-width: 2px;
            border-color: black;
            width: outerrect.width - 8px;
            height: outerrect.height - 8px;
            contentrect := Rectangle {
                width: innerrect.width - 8px;
                height: innerrect.height - 8px;
                @children
            }
        }
    }
}
