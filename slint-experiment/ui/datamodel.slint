export enum PListKind { PList, Filter }

export struct PListHandle {
    id: string,
    name: string,
    kind: PListKind,
}
export struct PListFolder {
    id: string,
    name: string,
    expanded: bool,
    plists: [PListHandle]
}

export struct DeviceDisplay {
    id: string,
    name: string,
    enabled: bool,
    icon: image,
    hero: image,
    playlists: [PListFolder]
}

export struct ActionItem {
    id: string,
    alt: string,
    icons: image,

}

