export enum PListKind { PList, Filter }

export struct PListHandle {
    id: string,
    name: string,
    kind: PListKind,
}
export struct PListFolder {
    id: string,
    name: string,
    expanded: bool,
    plists: [PListHandle]
}

export struct DeviceDisplay {
    id: string,
    name: string,
    enabled: bool,
    icon: image,
    hero: image,
    active_list_id: string,
    playlists: [PListFolder]
}

export struct ActionItem {
    id: string,
    alt: string,
    icons: image,

}

export struct PlaylistItem {
    id: string,
    name: string,
    filename: string,
    media_type: string,
    filesize_bytes: int,
    artist: string,
    album: string,
    album_position: int,
    albumart: image,
    imprint: string,
    }

export struct Playlist {
    id: string,
    items: [PlaylistItem],
    }

