export struct OButtonStateStyle {
    border-width: length,
    border-radius: length,
    border-brush: brush,
    background-brush: brush,
    image: image,
}

export struct OButtonStyle {
    active: OButtonStateStyle,
    hover: OButtonStateStyle,
    disabled: OButtonStateStyle,
    pressed: OButtonStateStyle,
    alert: OButtonStateStyle,
    highlighted: OButtonStateStyle,
}

export global OButtonType {
    out property <int> Normal:0;
    out property <int> Device:1;
    out property <int> Menu:2;
}

export struct OPaneStyle {
    width: length,
    length: length,
    background-brush: brush,
    border-width: length,
    border-radius: length,
    border-brush: brush,
    image: image,
    padding: length,
}

export struct AppPaneStyles {
    devices: OPaneStyle,
    devices-expanded: OPaneStyle
}

export global OStyle {
    in-out property <AppPaneStyles> panes: {
        devices: {
            width: 40px,
            background-brush: #990000,
            border-width: 5px,
            border-radius: 10px, 
            border-brush: #555555,
            padding: 5px,
        }
    };
    in-out property <[OButtonStyle]> buttons: [
        {
            active: {
                border-width: 5px,
                border-radius: 10px,
                border-brush: #FF0000,
                background-brush: #F0F0F1
            },
            hover: {
                border-width: 5px,
                border-radius: 10px,
                border-brush: #555555,
                background-brush: #FFFFFF,
            },
            disabled: {
                border-width: 5px,
                border-radius: 10px,
                background-brush: #FFFFFF,
            },
            pressed: {
                border-width: 5px,
                border-radius: 10px,
                background-brush: #FFFFFF,
            },
            alert: {
                border-width: 5px,
                border-radius: 10px,
                background-brush: #FFFFFF,
            },
            highlighted: {
                border-width: 5px,
                border-radius: 10px,
                background-brush: #FFFFFF,
            }
        }
    ];
}
